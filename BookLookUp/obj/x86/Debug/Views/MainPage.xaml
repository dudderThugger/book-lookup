<Page x:Class="BookLookUp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:BookLookUp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:BookLookUp.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </Page.DataContext>

    <Page.Resources>
        <CollectionViewSource   x:Key="BooksViewSource"
                            IsSourceGrouped="True"
                            Source="{Binding BookLists}" 
                            ItemsPath="Books"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:PageHeader Content="Book Look-Up" Grid.Row="0" />
        <StackPanel Grid.Row="1" Grid.Column="0">
            <StackPanel Margin="25" Orientation="Horizontal" HorizontalAlignment="Stretch" >
                <AutoSuggestBox x:ConnectionId='6' x:Name="searchBox"
                            PlaceholderText="Search for a book"
                                                                          
                                                                    
                                                                              
                            VerticalAlignment="Center" Width="1331" FontSize="22"
                            QueryIcon="Find"/>
                <ComboBox x:ConnectionId='7' x:Name="searchOptions"
                    SelectedIndex="0" VerticalAlignment="Center" FontSize="18"                                                  >
                    <ComboBoxItem Content="Title"/>
                    <ComboBoxItem Content="Author"/>
                    <ComboBoxItem Content="Keywords"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <GridView x:ConnectionId='3' Grid.Row="2"
          Padding="18"
          ItemsSource="{Binding Source={StaticResource BooksViewSource}}"
          IsItemClickEnabled="True"                           >
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="250" Height="500">
                        <Image Source="{Binding Image}" Stretch="UniformToFill" VerticalAlignment="Center" />
                        <Border VerticalAlignment="Bottom" Background="#AA000000">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Title }" Margin="12" Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Width="Auto">
                                    <TextBlock Text="{Binding AuthorStr }" Margin="12" Foreground="LightGray" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding FirstPublishYear }" Margin="12" Foreground="Gray" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="Books" Margin="-12,0,0,0" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </GridView.GroupStyle>
        </GridView>
    </Grid>
</Page>


