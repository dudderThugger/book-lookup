<Page
    x:Class="BookLookUp.Views.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookLookUp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:vm="using:BookLookUp.ViewModels"
    xmlns:c="using:Template10.Controls">

    <Page.DataContext>
        <vm:DetailsPageViewModel x:ConnectionId='2' x:Name="ViewModel"/>
    </Page.DataContext>

    <Page.Resources>
        <CollectionViewSource   x:Key="AuthorsViewSource"
                        IsSourceGrouped="True"
                        Source="{Binding AuthorReferences}" 
                        ItemsPath="Authors"/>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <c:PageHeader Grid.Row="0" Content="Book Look-Up" />
        <StackPanel Grid.Row="1" Margin="18" Orientation="Horizontal">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="1" Grid.Column="0" >
                    <Image x:ConnectionId='5' Source="{Binding Work.SmallImage}" VerticalAlignment="Center" Margin="12"                      />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                        Text="{Binding Work.Title}" Margin="0,0,0,12" TextWrapping="Wrap"/>
                    <StackPanel>
                        <GridView
                              Padding="2"
                              ItemsSource="{Binding Source={StaticResource AuthorsViewSource}}">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="Auto" Height="Auto">
                                        <HyperlinkButton Content="{Binding Name}" NavigateUri="{Binding URL}" Style="{StaticResource TitleTextBlockStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                    <TextBlock Style="{StaticResource BaseTextBlockStyle}"
                        Text="{Binding Work.FirstPublishDate}" Margin="0,0,0,12" TextWrapping="Wrap"/>
                    <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                        Text="{Binding Work.Description.Value}" Margin="0,0,0,12" TextWrapping="Wrap" />
                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Subjects:" TextWrapping="Wrap"/>
                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{Binding Work.SubjectsStr}" TextWrapping="Wrap"/>
                </StackPanel>

            </Grid>
        </StackPanel>

        <ContentDialog x:ConnectionId='3' x:Name="ImageDialog"
                        VerticalAlignment="Stretch"
                        Title="{Binding Work.Title}"
                        IsPrimaryButtonEnabled="{Binding IsChecked, ElementName=checkBoxAgree, Mode=OneWay}"
                        SecondaryButtonText="Cancel">
            <Grid Background="White">
                <StackPanel>
                    <Image Stretch="Fill" Source="{Binding Work.LargeImage}" Margin="10"/>
                    <TextBlock Text="{Binding Work.LargeImage}" Style="{StaticResource CaptionTextBlockStyle}" />
                </StackPanel>
            </Grid>

        </ContentDialog>
    </Grid>
</Page>

